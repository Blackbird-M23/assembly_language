.MODEL SMALL
.STACK 100H

.DATA
M DB 'I LOVE ASSEMBLY $'

.CODE
MAIN PROC

  ; 1 -> SINGLE KEY INPUT
  ; 2 -> SINGLE CHAR OUTPUT
  ; 9 -> CHAR STRING OUTPUT

  ; IF DATA SEGMENT IS USED THEN WE WILL HAVE TO ASSIGN THE DATA SEGMENT TO CODE SEGMENT
  MOV AX, @DATA 
  MOV DS, AX

  ; FUNC : 9
  MOV AH, 9    ; FUCNTION COMMAND
  LEA DX, M   ; LEAD EFFECTIVE ADDRESS
  INT 21H   ; FUNCTION CALLED

  ; FUNC : 1
  MOV AH, 1
  INT 21H
  MOV BL, AL   ; INPUT WILL BE STORED IN AL BY DEFAULT. THEN IT HAS TO BE TRANSFERRED TO BL REGISTER

  ; FUNC : 2
  MOV AH, 2
  MOV DL, BL   ; THE VALUE IN BL WILL BE SHOWN IN THE OUTPUT, THE VALUE OF BL WILL BE TRANSFERRED TO DX (DL CAN ALSO BE USED FOR SMALL DATA) TO SHOW
  INT 21H

  EXIT:
  MOV AH, 4CH   ; FUNCTION COMMAND FOR EXITTING THE MAIN PROC
  INT 21H

MAIN ENDP
END MAIN
