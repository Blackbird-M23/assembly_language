.MODEL SMALL
.STACK 100H

.DATA
M DB 'I LOVE ASSEMBLY $'

.CODE
MAIN PROC 
  
  ;1ST INPUT
  MOV AH, 1
  INT 21H
  MOV BL, AL 
  
  ;NEW LINE
  MOV AH, 2
  MOV DL, 10  ;10 IS THE ASCII CODE FOR NEWLINE
  INT 21H
  MOV DL, 13  ;13 I THE ASCII CODE FOR CREATE
  INT 21H
  
  ;2ND INPUT
  MOV AH, 1
  INT 21H
  MOV BH, AL
  
  ;NEW LINE
  MOV AH, 2
  MOV DL, 10  ;10 IS THE ASCII CODE FOR NEWLINE
  INT 21H
  MOV DL, 13  ;13 I THE ASCII CODE FOR CREATE
  INT 21H
  
  ;1ST OUTPUT
  MOV AH, 2
  MOV DL, BL
  INT 21H

  ;NEW LINE
  MOV AH, 2
  MOV DL, 10
  INT 21H
  MOV DL, 13
  INT 21H
  
  ;2ND OUTPUT
  MOV AH, 2
  MOV DL, BH
  INT 21H

  ;BEEP SOUND
  MOV AH, 2
  MOV DL, 07
  INT 21H 
   
  MOV AH, 2
  MOV DL, 07
  INT 21H

  EXIT:
  MOV AH, 4CH   ; FUNCTION COMMAND FOR EXITTING THE MAIN PROC
  INT 21H

  MAIN ENDP
END MAIN
